{
  "identity": {
    "name": "E1",
    "role": "Creative Designer",
    "principles": [
      "Fusion over Imitation",
      "Emotion First",
      "Content is King",
      "Zoom In",
      "Negative Space",
      "Contrast"
    ]
  },
  "project": {
    "name": "AI Chess Coach",
    "description": "A calm, strict, experienced chess coach app that understands context and trains mistakes like a human.",
    "persona": "The Grandmaster Mentor - Firm, supportive, wise, disciplined.",
    "target_audience": "Beginners to Intermediate players, Parents, Serious Hobbyists."
  },
  "design_system": {
    "theme_strategy": "Dynamic (Dark-first, Light secondary)",
    "typography": {
      "headings": {
        "font_family": "Outfit, sans-serif",
        "weights": ["500", "600", "700"],
        "usage": "Use for all H1-H6. Tight tracking (-0.02em).",
        "install_command": "yarn add @fontsource/outfit"
      },
      "body": {
        "font_family": "Manrope, sans-serif",
        "weights": ["400", "500"],
        "usage": "Use for all paragraphs and UI text. Relaxed leading."
      },
      "mono": {
        "font_family": "JetBrains Mono, monospace",
        "usage": "Use for chess notation (e.g., 1. e4 e5), stats, and code snippets."
      },
      "rules": [
        "Never use Inter for headings.",
        "Uppercase labels (12px, tracking-widest, font-medium) for section headers.",
        "High contrast text always."
      ]
    },
    "colors": {
      "palette": {
        "dark": {
          "background": "#0A0A0A",
          "surface": "#121212",
          "surface_highlight": "#1E1E1E",
          "border": "#27272A",
          "text_primary": "#FFFFFF",
          "text_secondary": "#A1A1AA"
        },
        "light": {
          "background": "#F5F5F7",
          "surface": "#FFFFFF",
          "surface_highlight": "#F0F0F0",
          "border": "#E4E4E7",
          "text_primary": "#18181B",
          "text_secondary": "#71717A"
        },
        "accents": {
          "primary": "#FFFFFF",
          "primary_foreground": "#000000",
          "focus": "#F59E0B",
          "growth": "#10B981",
          "neutral": "#71717A"
        },
        "chess_semantics": {
          "blunder": "#EF4444",
          "mistake": "#F97316",
          "inaccuracy": "#EAB308",
          "good": "#3B82F6",
          "excellent": "#10B981",
          "brilliant": "#14B8A6"
        }
      },
      "rules": [
        "NO Gradients.",
        "NO Glassmorphism.",
        "Use solid colors with subtle borders.",
        "Dark mode is default."
      ]
    },
    "layout": {
      "grid_system": "Bento Grid (Mode B for Dashboard)",
      "spacing": {
        "base": "4px",
        "container_padding": "p-6 md:p-8 lg:p-12",
        "gap": "gap-4 md:gap-6"
      },
      "radius": {
        "default": "rounded-md",
        "card": "rounded-lg",
        "button": "rounded-md"
      },
      "rules": [
        "Use 'subgrid' where possible for alignment.",
        "Always use 'container' class with max-width.",
        "Mobile-first: grid-cols-1 -> md:grid-cols-3."
      ]
    },
    "components": {
      "buttons": {
        "style": "Solid, slightly rounded (rounded-md). High contrast.",
        "hover": "Scale 1.02, no shadow change."
      },
      "cards": {
        "style": "Flat, 1px border (border-white/10 in dark), no shadow.",
        "hover": "Border color lighten, no lift."
      },
      "progress": {
        "style": "Apple Fitness Rings (Circular).",
        "library": "Custom SVG or Recharts RadialBar."
      },
      "icons": {
        "library": "Phosphor Icons (Duotone)",
        "install_command": "yarn add @phosphor-icons/react"
      }
    },
    "motion": {
      "library": "framer-motion",
      "principles": [
        "Smooth, damped springs (stiffness: 100, damping: 20).",
        "Staggered entrance for lists.",
        "Micro-interactions on hover (scale, color shift).",
        "NO flashy transitions."
      ]
    },
    "assets": {
      "images": [
        {
